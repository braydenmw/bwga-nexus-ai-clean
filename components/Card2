import React from 'react';

interface CardProps {
    children: React.ReactNode;
    className?: string;
}

const Card: React.FC<CardProps> = ({ children, className = '' }) => {
    return <div className={`bg-white p-8 md:p-12 rounded-2xl shadow-lg border border-gray-200/80 relative space-y-10 ${className}`}>{children}</div>;
};

export default Card;